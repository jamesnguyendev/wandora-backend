generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  role         String    @default("guest")
  verified     Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  Booking      Booking[]
}

model Listing {
  id          String    @id @default(uuid())
  hostId      String    @default(uuid())
  title       String
  description String?
  latitude    Float
  longitude   Float
  priceBase   Float
  type        String // e.g., "room", "experience"
  createdAt   DateTime  @default(now())
  Booking     Booking[]

  @@index([title])
  @@index([latitude, longitude])
  @@index([priceBase])
  @@index([type])
  @@index([createdAt])
}

model Booking {
  id         String   @id @default(uuid())
  userId     String
  listingId  String
  startDate  DateTime
  endDate    DateTime
  totalPrice Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  listing Listing @relation(fields: [listingId], references: [id])

  @@index([listingId])
  @@index([userId])
  @@index([startDate, endDate])
  @@index([createdAt])
}
